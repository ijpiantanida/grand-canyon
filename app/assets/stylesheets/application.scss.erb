@import './theme';

@font-face {
  font-family: 'worksans';
  src: url('<%= asset_path("WorkSans-Regular.ttf") %>') format('truetype');
}

body {
  font-family: "worksans", sans-serif;
  color: rgba(51, 51, 51, 0.95);
}

#app {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.app__title-bar {
  background-image: url(<%= image_path("grand_canyon_background.jpg") %>);
  background-size: cover;
  color: white;
  height: 200px;
  max-height: 200px;
  position: relative;
}

.app__title {
  bottom: 10px;
  left: 0;
  right: 0;
  margin: 10px;
  position: absolute;
  text-align: center;
}

.app__content {
  align-items: stretch;
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: $padding;
}

.app__nav {
  align-items: center;
  display: flex;
  margin-bottom: 10px;
  height: 30px;
}

.nav__item {
  margin-right: 10px;

  &--active {
    font-weight: 700;
    border-bottom: solid 1px;
  }
}

.nav__item-separator {
  flex: 1;
}

.app__network-state {
  background-color: rgba(176, 4, 0, 0.97);
  color: white;
  border-radius: 5px;
  padding: 3px 5px;
}
